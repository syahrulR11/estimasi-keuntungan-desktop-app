<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<HBox xmlns:fx="http://javafx.com/fxml"
    spacing="10"
    alignment="CENTER_LEFT"
    maxWidth="350"
    style="
        -fx-background-color: white;
        -fx-background-radius: 10;
        -fx-padding: 10;
        -fx-border-color: #ddd;
        -fx-border-radius: 10;
        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.1, 0, 2);">
    <ImageView fx:id="icon" fitWidth="20" fitHeight="20"/>
    <Label fx:id="messageLabel" style="-fx-font-size: 14px; -fx-text-fill: #333;" />
</HBox>
